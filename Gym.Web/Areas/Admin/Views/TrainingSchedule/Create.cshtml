@model Gym.ViewModels.TrainingScheduleViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h4 class="fw-bold my-3"><span class="text-muted fw-light">Quản lý /</span> <a asp-action="Index" class="text-muted fw-light">Lịch tập</a><span> /</span> Thêm lịch tập</h4>

<div class="card mb-3">
    <div class="card-header text-white fs-4 p-3" style="background: #A50000;">
        Thêm Lịch Tập Mới
    </div>

    <div class="card-body  mt-3">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TrainerId" class="control-label">ID Huấn Luyện Viên:</label>
                    <input asp-for="TrainerId" class="form-control" />
                    <span asp-validation-for="TrainerId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="StartTime" class="control-label">Thời gian bắt đầu:</label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="EndTime" class="control-label">Thời gian kết thúc:</label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Location" class="control-label">Địa chỉ:</label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description" class="control-label">Mô tả:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group form-check mt-2">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsSpecialClass" /> @Html.DisplayNameFor(model => model.IsSpecialClass)
                    </label>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Tạo" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>

