@using Gym.Utillities;
@model PagedResult<Gym.ViewModels.ApplicationUserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@using (Html.BeginForm("Search", "Users", FormMethod.Get))
{
    <div class="form-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm..." />
    </div>
    <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Role
            </th>
            <th>
                UserName
            </th>
            <th>
                FullName
            </th>
            <th>
                DateOfBirth
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                IsActive
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedDateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id}) |
                @Html.ActionLink("Details", "Details", new { id=item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>