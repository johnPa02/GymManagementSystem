@* Sửa cái này thành ServiceViewModel *@
@model Gym.ViewModels.PackageViewModel

@{
    ViewData["Title"] = "Thêm Dịch Vụ";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h4 class="fw-bold my-3"><span class="text-muted fw-light">Quản lý /</span> <a asp-action="Index" class="text-muted fw-light">Dịch vụ</a><span> /</span> Thêm dịch vụ</h4>

<div class="card mb-3">
    <div class="card-header text-white fs-4 p-3" style="background: #A50000;">
        Thêm Dịch Vụ Mới
    </div>

    <div class="card-body  mt-3">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PackageName" class="control-label">Tên dịch vụ:</label>
                    <input asp-for="PackageName" class="form-control" />
                    <span asp-validation-for="PackageName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Price" class="control-label">Mô tả:</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Duration" class="control-label">Giá:</label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Description" class="control-label">Loại dịch vụ:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Thêm" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>