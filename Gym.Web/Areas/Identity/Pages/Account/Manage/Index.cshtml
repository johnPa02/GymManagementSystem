@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row" style="padding-left: 264px">
    <partial name="_StatusMessage" for="StatusMessage" />

    <h2 style="text-align: center; margin-bottom: 30px 0px;">THÔNG TIN CÁ NHÂN</h2>
    <!-- Column for Profile Image -->
    <div class="col-md-4">
        <!-- You can customize this section for profile image -->
        <div class="text-center mb-3">
            <img src="/img/Logo.png" alt="Profile Image" class="img-fluid rounded-circle" style="max-width: 200px;">
            <div class="mt-2">
                <button class="btn btn-dark mt-2">Chọn ảnh</button>
            </div>
        </div>
    </div>

    <!-- Column for Personal Information -->
    <div class="col-md-8 mt-4">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-dark">Lưu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
