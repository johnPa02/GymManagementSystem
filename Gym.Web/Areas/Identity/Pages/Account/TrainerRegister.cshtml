@page
@model TrainerRegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h4 class="fw-bold my-3"><span class="text-muted fw-light">Quản lý /</span> <a asp-action="Index" class="text-muted fw-light">Nhân viên</a><span> /</span> Thêm HLV</h4>

<div class="card mb-3">
    <div class="card-header text-white fs-4 p-3" style="background: #A50000;">
        Thêm HLV Mới
    </div>

    <div class="card-body  mt-3">
        <div class="row"> 
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.FullName" class="control-label">Họ tên</label>
                    <input asp-for="Input.FullName" class="form-control" aria-required="true" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.PhoneNumber" class="control-label">Số điện thoại</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" type="tel" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.DateOfBirth" class="control-label">Ngày sinh</label>
                    <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.SelectedSpecialization" class="control-label">Chuyên môn</label>
                    <select asp-for="Input.SelectedSpecialization" asp-items="@Model.Input.SpecializationOptions" class="form-control" aria-label="Specialization">
                        <option value="">-- Choose Specialization --</option>
                    </select>
                    <span asp-validation-for="Input.SelectedSpecialization" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.Email" class="control-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.Password" class="control-label">Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group form-check mt-2">
                    <label asp-for="Input.IsActive" class="form-check-label">
                        <input class="form-check-input" asp-for="Input.IsActive" /> @Html.DisplayNameFor(model => model.Input.IsActive)
                    </label>
                </div>
                <div class="form-group mt-3">
                    <input id="registerSubmit" type="submit" value="Thêm" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>
